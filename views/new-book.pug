extends layout

block content
    title= title 

    h1= title
    
    if(errors)
        h2.error Oops!
        ul.error
            each error in errors
                li= error.message
    
    form(action='/books/new' method='POST')
        p
            label(for="title") Title
            input#title(type="text", name="title", placeholder="Title")
        p
            label(for="author") Author
            input#author(type="text", name="author", placeholder="Author")
        p
            label(for="genre") Genre
            input#genre(type="text", name="genre", placeholder="Genre")
        p
            label(for="year") Year
            input#year(type="text", name="year", placeholder="Year")
        p
            button(type="submit") Create New Book
        p
            a.button(href="/books") Cancel