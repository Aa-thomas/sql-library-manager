extends layout

block content
  head 
  title Book Search
  form(action='/books/search' method='get')
    p
      label(for="search") Search
      input#search(type="text", name="search", placeholder="Search")
    p
      button(type="submit") Search
    

  h1 Books 

  a.button(href="/books/new") New Book

  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
        th
    tbody
      each book in books
        tr
          td
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year