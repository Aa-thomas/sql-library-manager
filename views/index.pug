extends layout

block content
  head 
  title Book Search
  form(action='/books/search' method='get')
    div.flex      
      label(for="search") Search
      input#search(type="text", name="search", placeholder="Search" required)
      button(type="submit") Search
        
        
    

  div.flex
    h1 Books
    p Public Library
    a.button.new(href="/books/new") New Book 

  

  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
        th 
    tbody
      each book in books
        tr
          td
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year
          td
            form(action=`/books/${book.id}/delete` method='POST')
              input(type="hidden", name="id", value=book.id)
              button(type="submit") Delete Book
  a.button(href='/books') List All
